<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>API Parser Web Application</display-name>

  <!-- Регистрация сервлета для парсинга API -->
  <servlet>
    <servlet-name>ApiParserServlet</servlet-name>
    <servlet-class>org.controllers.ApiParserServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>ApiParserServlet</servlet-name>
    <url-pattern>/apis</url-pattern>
  </servlet-mapping>

  <!-- Установка кодировки по умолчанию -->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Приветственная страница -->
  <welcome-file-list>
    <welcome-file>apis</welcome-file>
  </welcome-file-list>
</web-app>
